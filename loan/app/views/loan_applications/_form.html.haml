= form_for @loan_application do |f|
  - if @loan_application.errors.any?
    #error_explanation
      %h2= "#{pluralize(@loan_application.errors.count, "error")} prohibited this loan_application from being saved:"
      %ul
        - @loan_application.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :loan_amount
    = f.text_field :loan_amount
  .field
    = f.label :prop_value
    = f.text_field :prop_value
  .field
    = f.label :ssn
    = f.text_field :ssn
  .field
    = f.label :status
    = f.text_field :status
  .actions
    = f.submit 'Save'
